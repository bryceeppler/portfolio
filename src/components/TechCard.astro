---
interface TechCard {
  name: string;
  color: string;
}

export interface Props {
  tech: TechCard;
}

const { name, color } = Astro.props.tech;
---

<div
  class={`py-2 px-1 rounded-lg text-xs font-bold mr-2`}
  style={`
    background-color: ${color}; 
    color: white;
    `}
>
  <div>
    {name}
  </div>
</div>
